
<% if current_user.nil? %>

  <h1> Not logged in. </h1>
<% end %>

<% if !current_user.role? :admin %>
  <h1> You do not have permission to view this page. </h1>
<% end%>

<!-- If there is a current user, and they are an admin,
     then render the form template index as normal. -->
<% if !current_user.nil? %>
  <% if current_user.role? :admin %>
<div class="sidebar">
  <h1 class="editHead">Available Forms </h1>

    <table>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @form_types.each do |form_type| %>
      <tr class=avibuttons>
        <td class="avibuttons"><%= form_type.name %></td>
        <td class="avibuttons"><%= link_to 'Show', form_type %></td>
        <td class="avibuttons"><%= link_to 'Edit', edit_form_type_path(form_type) %></td>
        <td class="avibuttons"><%= link_to 'Destroy', form_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>
    <br />
    <%= link_to 'New form template', new_form_type_path %>
  </div>

  <% end %>
<% end %>
