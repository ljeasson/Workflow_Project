<h1>Form Details:</h1>

<p>
  <b>Name:</b>
  <%= @form.name %>

</p>

<% @form.properties.each do |name, value| %>
  <p>
    <b><%= name.humanize %>:</b>

    <% if value == "1"%>
     <h1> =3 </h1>
    <% end %>

    <%= value %>
  </p>
<% end %>

<p>
  <%= link_to 'Edit', edit_form_path(@form) %> |
  <%= link_to 'Back to Forms', forms_path %>
</p>
